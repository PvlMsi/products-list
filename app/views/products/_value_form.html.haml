- parameters.each do |parameter|
  .row
    .col
      = parameter.name
      = hidden_field_tag "product[product_values_attributes[][parameter_id]]", parameter.id
      - if parameter.data_type == 'array'
        = select_tag "product[product_values_attributes[][value]]", options_for_select(parameter.options), include_blank: true, class: 'form-control'
      - else
        = text_field_tag "product[product_values_attributes[][value]]", nil, class: 'form-control'